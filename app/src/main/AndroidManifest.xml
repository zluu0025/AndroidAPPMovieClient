<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movieclient" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/colorful_sky"
        android:label="@string/app_name"
        android:roundIcon="@drawable/colorful_sky"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true" >

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".activity.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SignUpActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".activity.MovieInfoActivity" />
        <activity android:name=".activity.WatchActivity" />
        <activity android:name=".activity.AddMemoirActivity" />
        <activity android:name=".activity.ChartActivity" />
        <activity android:name=".activity.MapsActivity" />
    </application>

</manifest>